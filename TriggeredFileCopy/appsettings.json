{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "c:\\Temp\\TriggeredFile.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 15
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "TriggerFile"
    }
  },
  "AppSettings": {
    "SourceDirectory": "\\\\nas04.johnhinz.com\\scans",
    "TargetDirectory": "\\\\nas04.johnhinz.com\\Paperless"
  }
}